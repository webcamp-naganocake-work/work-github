<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <table class="table table-bordered">
      <thead></thead>
      <tbody>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name + " " + @order.customer.first_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= "〒" + @order.postal_code + " " + @order.address %><br>
            <%= @order.addressee %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch  do |f| %>
              <%= f.collection_select :order_status, Order.all, :id, :order_status_i18n %>
              <%= f.submit "更新",class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="row">
    <div class="col-10">
      <table class="table table-bordered">
        <thead></thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price_including_tax %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
              <td>
                <%= form_with model: @order do |f| %>
                  <%= f.collection_select :making_status, @order_details.all, :id, :making_status_i18n %>
                  <%= f.submit "更新",class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-2">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total + 800 %></td>
        </tr>
      </table>
    </div>
  </div>
</div>