 <div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>ジャンル一覧・追加</h1>
        <%= form_with model: @genre, url:admin_genres_path do |f| %>
          <h4>ジャンル名</h4>
          <%= f.text_field :name %>
          <%= f.submit '新規登録' %>
        <% end %>

        <table class = "table">
          <thead>
            <tr>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
             <tr>
              <td>
                <span><%= genre.name %></span>
              </td>
             </tr>
             <tr>
              <td>
                <span><%= link_to "編集", edit_admin_genre_path(genre.id) %></span>
              </td>
             </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>