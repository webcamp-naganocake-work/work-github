<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <label>ジャンル名</label>
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit '新規登録',class: "btn btn-success" %>
      <% end %>
      <table class = "table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
           <tr>
            <td>
              <span><%= genre.name %></span>
            </td>
            <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>