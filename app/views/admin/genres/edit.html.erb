<div class="container">
  <h2>ジャンル編集</h2>
  <div class="row">
    <%= form_with model: @genre, url:admin_genre_path, method: :patch do |f| %>
      <label>ジャンル名</label>
      <%= f.text_field :name, placeholder: @genre.name %>
      <%= f.submit '変更を保存',class: "btn btn-success" %>
    <% end %>
  </div>
</div>


