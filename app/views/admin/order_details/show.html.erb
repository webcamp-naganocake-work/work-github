<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
       
    <h2>購入者</h2>
    <p><%= @order.name %></p>
       
    <h2>注文日</h2>
    <p><%= @order.name %></p>
       
    <h2>配送先</h2>
    <p><%= @order.name %></p>
       
    <h2>支払方法</h2>
    <p><%= @order.name %></p>
       
    <h2>注文ステータス</h2>
    <p><%= @order.name %></p>
       
    <table class = "table">
      <thead>
        <tr>
          <th>商品名</th>   
          <th>単価(税込)</th> 
          <th>数量</th> 
          <th>小計</th> 
          <th>制作ステータス</th> 
        </tr>
      </thead>
      <tbody>
        <%= @order.each do |order| %>
          <tr>
            <td>
              <%= order.item.name %>
            </td>
            <td>
              <%= order.total %>
            </td>
            <td>
              <%= order. %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   
  </div>
</div>
  