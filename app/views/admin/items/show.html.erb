<div class="container">
  <div class="row">
   <h1>商品詳細</h1>
   <tr>
    <%= image_tag @item.image, size:"100x100" %>
   </tr>
   <table class = "table">
     <tr>
       <th>商品名</th>
       <th><%= @item.name %></th>
     </tr>
     <tr>
       <th>商品説明</th>
       <th><%= @item.introduction %></th>
     </tr>
     <tr>
       <th>ジャンル</th>
       <th><%= @item.genre.name %></th>
     </tr>
     <tr>
       <th>税込価格(税抜価格)</th>
       <th><%= (@item.price*1.1).to_i %>(<%= @item.price %>)円</th>
     </tr>
     <tr>
       <th>販売ステータス</th>
       <th>
          <% if @item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
       </th>
     </tr>
   </table>
   <%= link_to "編集",edit_admin_item_path %>
  </div>
</div>