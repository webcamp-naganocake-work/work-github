<div class="container">
  <div class="w-25">
    <h4 class="alert-secondary text-center">商品新規登録</h4>
  </div>
    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <table class="mx-auto">
      <thead>
          <tr>
            <th></th>
          </tr>
      </thead>
      <tbody>
      <tr>
      <td>商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
      <td>商品名</td>
        <td><%= f.text_field :name, placeholder: "商品名" %></td>
      </tr>
      <tr>
      <td>商品説明</h4>
        <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
      </tr>
      <tr>
      <td>ジャンル</td>
        <%#= f.select :genre_id,[ ["ケーキ",1],["焼き菓子",2],["プリン",3],["キャンディ",4] ],prompt: "--選択してください--" %>
        <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "--選択してください--") %></td>
      </tr>
      <tr>
      <td>税抜価格</td>
        <td><%= f.text_field :price, placeholder: "1000" %></td>
      </tr>
      <tr>
      <td>販売ステータス</td>
        <td><%= f.radio_button :is_active, "販売中", checked: true %>販売中
            <%= f.radio_button :is_active, "販売停止中" %>販売停止中</td>
      </tr>
      </tbody>
    </table>
    <div class="row justify-content-center">
      <%= f.submit '新規登録',class: "btn btn-success" %>
    </div>
    <% end %>
</div>