<div class="container">
  <h4><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            会員ID
          </div>
          <div class="col-4">
            <%= @customer.id %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            氏名
          </div>
          <div class="col-4">
            <%= f.text_field :last_name %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            フリガナ
          </div>
          <div class="col-4">
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            郵便番号
          </div>
          <div class="col-4">
            <%= f.text_field :postal_code %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            住所
          </div>
          <div class="col-4">
            <%= f.text_field :address, size: 40 %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            電話番号
          </div>
          <div class="col-4">
            <%= f.text_field :telephone_number %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            メールアドレス
          </div>
          <div class="col-4">
            <%= f.text_field :email, size: 40 %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-4">
            会員ステータス
          </div>
          <div class="col-4">
            <%= f.radio_button :is_deleted, false %>有効
          </div>
          <div class="col-4">
            <%= f.radio_button :is_deleted, true %>退会
          </div>
        </div>
      </div>
      <%= f.submit '変更を保存',class: "btn btn-success" %>
    <% end %>
  </div>
</div>