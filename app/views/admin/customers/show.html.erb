<div class="container">
  <div class="row">
   <h1>会員詳細</h1>
   <table class = "table">
     <tr>
       <th>会員ID</th>
       <th><%= @customer.id %></th>
     </tr>
     <tr>
       <th>氏名</th>
       <th><%= @customer.last_name + " " + @customer.first_name %></th>
     </tr>
     <tr>
       <th>フリガナ</th>
       <th><%= @customer.last_name_kana + " " + @customer.first_name_kana %></th>
     </tr>
     <tr>
       <th>郵便番号</th>
       <th><%= @customer.postal_code %></th>
     </tr>
     <tr>
       <th>住所</th>
       <th><%= @customer.address %></th>
     </tr>
     <tr>
       <th>電話番号</th>
       <th><%= @customer.telephone_number %></th>
     </tr>
     <tr>
       <th>メールアドレス</th>
       <th><%= @customer.email %></th>
     </tr>
     <tr>
       <th>会員ステータス</th>
       <th>
         <% if @customer.is_deleted == true %>
           退会
         <% else %>
           有効
         <% end %>
       </th>
     </tr>
   </table>
   <div class = "col-4">
     <%= link_to "編集", edit_admin_customer_path,class: "btn btn-success" %>
   </div>
   <div class = "col-4">
     <%= link_to "注文履歴一覧を見る", admin_homes_path,class: "btn btn-primary" %>
   </div>
  </div>
</div>