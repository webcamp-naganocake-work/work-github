<div class="container">
  <h4><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
  <div class="row mb-2">
    <div class="col-4">会員ID</div>
    <div class="col-4"><%= @customer.id %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">氏名</div>
    <div class="col-4"><%= @customer.last_name + " " + @customer.first_name %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">フリガナ</div>
    <div class="col-4"><%= @customer.last_name_kana + " " + @customer.first_name_kana %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">郵便番号</div>
    <div class="col-4"><%= @customer.postal_code %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">住所</div>
    <div class="col-4"><%= @customer.address %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">電話番号</div>
    <div class="col-4"><%= @customer.telephone_number %></div>
  </div>
  <div class="row mb-2">
    <div class="col-4">メールアドレス</div>
    <div class="col-4"><%= @customer.email %></div>
  </div>
  <div class="row mb-4">
    <div class="col-4">会員ステータス</div>
    <div class="col-4">
      <% if @customer.is_deleted == true %>
        退会
      <% else %>
        有効
      <% end %>
    </div>
  </div>
  <div class="row justify-content-end">
   <div class = "col-4">
     <%= link_to "編集する", edit_admin_customer_path,class: "btn btn-success" %>
   </div>
   <div class = "col-4">
     <%= link_to "注文履歴一覧を見る", admin_root_path,class: "btn btn-primary" %>
   </div>
  </div>
</div>