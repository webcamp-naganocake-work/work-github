<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <div class="col-md-8">
      <table class = "table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_history.each do |order_history| %>
           <tr>
            <td>
              <span><%= link_to order_history.created_at.strftime("%Y-%m-%d"), admin_order_path(order_history.id) %></span>
            </td>
            <td>
              <span><%= order_history.customer.full_name %></span>
            </td>
            <td>
              <span>
                <%= order_history.order_details.sum(:amount) %>
              </span>
            </td>
            <td>
              <span><%= order_history.order_status_i18n %></span>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center">
        <%= paginate @order_history %>
      </div>
    </div>
  </div>
</div>