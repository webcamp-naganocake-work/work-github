<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
     <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "LOGO",  admin_root_path %>
          </div>
          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "商品一覧",  admin_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧",  admin_root_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% elseif admin_signed_out? %>
            <li class="nav-item">
              <%= link_to "about", about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_admin_item_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_admin_session_path %>
            </li>
          <% elsif customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "カート",  cart_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
          <% else %>
          　<li class="nav-item">
              <%= link_to "About", about_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path %>
            </li>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
