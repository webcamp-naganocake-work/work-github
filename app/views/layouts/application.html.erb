<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
　　 <nav class="navbar navbar-expand-lg navbar-dark bg-light">
        <div class="container">

          <% if admin_signed_in? %>
          
          <div class="header">
            <%= link_to "LOGO",  admin_root_path %>
          </div>
          
          <div class="navbar">
            <%= link_to "商品一覧",  admin_items_path %>
            <%= link_to "会員一覧", admin_customers_path %>
            <%= link_to "注文履歴一覧",  admin_root_path %>
            <%= link_to "ジャンル一覧", admin_genres_path %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </div>
          <% else %>
            <%= link_to "LOGO",  admin_root_path %>
            <%= link_to "about", about_path %>
            <%= link_to "商品一覧", admin_items_path %>
            <%= link_to "新規登録", new_admin_item_path %>
            <%= link_to "ログイン", new_admin_session_path %>
          <% end %>

   </header>

    <%= yield %>
  </body>
</html>
