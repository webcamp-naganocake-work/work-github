<%= flash[:notice] %>

<div class="container">
  <div class="row mb-4">
    <h3>ログイン</h3>
  </div>
  <h4>会員の方はこちらからログイン</h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="form-group col-4 mt-4 text-right">
        <%= f.label :email,"メールアドレス" %>
      </div>
      <div class="form-group col-4 mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"60x20", placeholder:"sample@example.com" %>
      </div>
    </div>  
    <div class="row">
      <div class="form-group col-4 text-right">
        <%= f.label :password,"パスワード" %>
      </div>
      <div class="form-group col-4">
        <%= f.password_field :password, autocomplete: "current-password", size:"60x20" %>
      </div>
    </div>
    <div class="row">
      <div class=".col-md-4 offset-md-4 mt-4">
        <%= f.submit "ログイン",class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
      
 <div class="row mt-4">
   <h4>会員登録がお済みでない方</h4>
 </div>
  <div class="row">
    <div class=".col-md-4 offset-md-2">
     <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
    </div>
     
  </div>
</div>