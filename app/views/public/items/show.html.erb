<div class="container">
  <div class="row justify-content-center">
    <div class = "col-4">
      <%= image_tag @item.image,size: "250x200" %>
    </div>
    <div class = "col-lg-4">
      <div class="col-xs-8 mb-2">
        <strong><%= @item.name %></strong><br>
      </div>
      <div class="col-xs-8 mb-4">
        <%= @item.introduction %><br>
      </div>
      <div class="col-xs-8 mb-4">
        ¥<%= @item.with_tax_price %>(税込)
      </div>
      <div class="col-xs-8 mb-4">
      <% if current_customer %>
        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <div class="row">
          <div class="col-2 mr-4">
            <%= f.select :amount, *[1..10] , { include_blank: '個数選択'} %>
            <%= f.hidden_field :item_id, :value => @item.id %>
          </div>
          <div class="col-2 ml-4">
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
    </div>
  </div>
</div>

