<div class="container">
    <div class="row">
      <h4>商品一覧</h4>
      <span>(全<%= @items.count %>件)</span>
    </div>
    <div class = "row">
      <% @items.each do |item| %>
          <div class ="col-md-3">
            <span><%= image_tag item.image, size: "250x200" %></span><br>
            <span><%= link_to item.name, item_path(item.id) %></span><br>
            <span><%= item.price %></span>
          </div>
      <% end %>
    </div>
    <%= paginate @item %>
</div>