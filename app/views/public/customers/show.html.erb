<div class="container">
  <h4>マイページ</h4>
  <div class="row mb-4">
    <div class="col-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-2">
      <%=link_to "編集する" ,edit_customer_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row mb-4">
    <table class = "table table-bordered" >
      <theader>
      </theader>
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
         <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mb-4">
    <div class="col-2">
      <h4>配送先</h4>
    </div>
    <div class="col-2">
      <%= link_to "一覧を見る" ,addresses_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <h4>注文履歴</h4>
    </div>
    <div class="col-2">
      <%= link_to "一覧を見る" ,orders_path, class: "btn btn-primary" %>
    </div>
  </div>

</div>
