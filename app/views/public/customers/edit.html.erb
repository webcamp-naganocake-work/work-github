<div class="container">
  <h4>会員情報編集</h4>
    <div class="row">
      <%= form_with model:@customer, url: customers_path do |f| %>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>氏名</label>
              </div>
              <div class="col">
                <%= f.text_field :last_name %>
              </div>
              <div class="col">
                <%= f.text_field :first_name %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>フリガナ</label>
              </div>
              <div class="col">
                <%= f.text_field :last_name_kana %>
              </div>
              <div class="col">
                <%= f.text_field :first_name_kana %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>郵便番号</label>
              </div>
              <div class="col">
                <%= f.text_field :postal_code %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>住所</label>
              </div>
               <div class="col">
                <%= f.text_field :address %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>電話番号</label>
              </div>
              <div class="col">
                 <%= f.text_field :telephone_number %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <label>メールアドレス</label>
              </div>
              <div class="col">
                <%= f.text_field :email %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row justify-content-around">
              <div class="col">
                <%= f.submit "編集内容を保存" , class: "btn btn-success" %>
              </div>
              <div class="col">
                <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
              </div>
            </div>
          </div>


      <% end %>
    </div>
</div>
