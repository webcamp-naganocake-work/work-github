<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <table class="table">
      <% @order.each do |order| %>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.address %></td>
            <td><%= order.order_detail.item.name %></td>
            <td><%= order.total %></td>
            <td><%= order.order_status %></td>
            <td><%= link_to "表示する", order_path(order.id) , class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>