<div class="container">
  <h4>注文履歴一覧</h4>
  <div class="row">
    <table class="table table-bordered">
      <% @order.each do |order| %>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td width="150">
              <%= order.created_at.strftime("%Y-%m-%d") %>
            </td>
            <td width="400">
              <%= '〒' + order.postal_code %><br>
              <%= order.address %><br>
              <%= order.addressee %>
            </td>
            <td width="250">
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td width="150">
              ¥<%= order.total %>
            </td>
            <td width="150">
              <%= order.order_status_i18n %>
            </td>
            <td width="150">
              <%= link_to "表示する", order_path(order.id) , class: "btn btn-primary" %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>