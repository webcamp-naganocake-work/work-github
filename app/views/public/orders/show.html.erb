<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>

    <table class="table">
      <thead></thead>
      <tbody>
        <span>注文情報</span>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </tbody>
    </table>

    <table class="table">
      <thead></thead>
      <tbody>
        <span>請求情報</span>
        <tr>
          <th>商品合計</th>
          <td><%= @order.cart_item.subtotal %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total %></td>
        </tr>
      </tbody>
    </table>

  </div>
  <div class="row">
    <table class="table">
      <thead></thead>
      <tbody>
        <span>注文内容</span>
        <% @orders.each do |orders| %>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <tr>
            <td><%= orders.item.name %></td>
            <td><%= orders.item.price %></td>
            <td><%= orders.order_detail.amount %></td>
            <td><%= orders.total %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>