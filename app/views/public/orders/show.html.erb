<div class="container">
  <h4>注文履歴詳細</h4>
  <div class="row">
    <table class="table table-bordered">
      <thead></thead>
      <tbody>
        <h4>注文情報</h4>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= "〒" + @order.postal_code + " " + @order.address + " " + @order.addressee %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </tbody>
    </table>

    <table class="table table-bordered">
      <thead></thead>
      <tbody>
        <h4>請求情報</h4>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total + 800 %></td>
        </tr>
      </tbody>
    </table>

  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead></thead>
      <tbody>
        <h4>注文内容</h4>
        <% @order_details.each do |order_detail| %>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price_including_tax %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>