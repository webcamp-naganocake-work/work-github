<div class="container">
  <h4>配送先編集</h4>
  <div class="row">

      <% form_with model: @address, url: edit_address_path do |f| %>
        <div class="form-group">
          <div class="row justify-content-around">
            <div class="col">
              <label>郵便番号(ハイフンなし)</label>
            </div>
            <div class="col">
              <%= f.text_field :postal_code %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row justify-content-around">
            <div class="col">
              <label>住所</label>
            </div>
            <div class="col">
              <%= f.text_field :address %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row justify-content-around">
            <div class="col">
              <label>宛名</label>
            </div>
            <div class="col">
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
        <%= f.submit "変更内容を保存" , class: "btn btn-success" %>
      <% end %>
  </div>
</div>