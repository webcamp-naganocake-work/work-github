<div class="container">
  <h4>配送先編集</h4>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-4">
          <label>郵便番号(ハイフンなし)</label>
        </div>
        <div class="col-8">
          <%= f.text_field :postal_code %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-4">
          <label>住所</label>
        </div>
        <div class="col-8">
          <%= f.text_field :address, size: 40 %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-4">
          <label>宛名</label>
        </div>
        <div class="col-4">
          <%= f.text_field :name %>
        </div>
        <div class="col-4">
          <%= f.submit "変更内容を保存" , class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>