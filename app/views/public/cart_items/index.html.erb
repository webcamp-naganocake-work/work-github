<div class="container">
  <div class="row">
    <h4>ショッピングカート</h4>
    <span><%= link_to "カートを空にする", cart_items_all_destroy_path, method: :delete, class: "btn btn-danger" %></span>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th><%= colspan="3" %></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_items| %>
          <tr>
            <td>
              <span><%= cart_items.item.name %></span>
            </td>
            <td>
              <span><%= cart_items.item.price*1.1.floor %></span>
            </td>
            <td>
              <%= form_with model: cart_items, url: cart_item_path(cart_items.id) , method: :patch do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <span><%= cart_items.item.price*1.1.floor*cart_items.amount %></span>
            </td>
            <td>
              <span><%= link_to "削除する", cart_item_path(cart_items.id) , method: :delete, class: "btn btn-danger" %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <%= link_to "買い物を続ける", items_path , class: "btn btn-primary" %>
    <table>
      <th>合計金額</th>
      <td>
        <% @cart_item.each do |cart_item| %>
          <% @total = @total + cart_item.subtotal %>
        <% end %>
      </td>
      <td><%= @total %></td>
    </table>
  </div>
  <div class="row">
    <%= link_to "情報入力に進む", new_order_path , class: "btn btn-success" %>
  </div>
</div>